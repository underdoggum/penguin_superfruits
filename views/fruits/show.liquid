{% layout "layout.liquid" %}
{% block content %}

<div>
  <article>
    <h2>
      {{ fruit.name }} - 
      {% if fruit.readyToEat == true %}
        Ready to eat
      {% else %}
        Not ready to eat
      {% endif %}
    </h2>
    <h3>{{ fruit.color }}</h3>
    <a href="/fruits/{{ fruit._id }}/edit"><button>Edit</button></a>
    <form action="/fruits/{{ fruit._id }}?_method=DELETE" method="post">
      <input type="submit" value="DELETE">
    </form>
  </article>
</div>

{% endblock %}
